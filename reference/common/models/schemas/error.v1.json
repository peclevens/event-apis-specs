{
  "title": "Error",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "status": {
      "type": "integer",
      "format": "int32",
      "title": "The HTTP status of the response",
      "minimum": 100,
      "maximum": 600
    },
    "code": {
      "type": "string",
      "title": "A specific error code given more context to the current error",
      "minLength": 2,
      "maxLength": 255,
      "pattern": "^[a-z0-9.-_]+$"
    },
    "requestId": {
      "type": "string",
      "format": "uuid",
      "title": "An opaque identifier assigned to this request"
    },
    "type": {
      "type": "string",
      "title": "Error type",
      "minLength": 2,
      "maxLength": 120,
      "default": "error",
      "pattern": "^[a-z0-9.-_]+$"
    },
    "message": {
      "type": "string",
      "title": "A message explaning the error",
      "minLength": 2,
      "maxLength": 1024
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "title": "The timestamp when the occurred"
    },
    "contextInfo": {
      "type": "object",
      "title": "An object with context information/data about the error",
      "additionalProperties": true,
      "properties": {
        "validationErrors": {
          "type": "array",
          "title": "A list of validation error",
          "items": {
            "type": "object",
            "title": "ValidationError",
            "additionalProperties": true,
            "required": [
              "field",
              "message"
            ],
            "properties": {
              "field": {
                "type": "string",
                "title": "The field name failing validation rules",
                "minLength": 2,
                "maxLength": 255
              },
              "message": {
                "type": "string",
                "title": "The validation error message",
                "minLength": 2,
                "maxLength": 255
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "status": 409,
    "code": "sample_duplicate_item_code",
    "requestId": "fbff2587-9de4-4aad-9dd5-c9739d21e20c",
    "type": "error",
    "message": "Item should not be duplicated",
    "timestamp": "2019-12-10T12:34:04Z",
    "contextInfo": {
      "validationErrors": [
        {
          "field": "fieldName",
          "message": "FieldName does not allow duplicate"
        }
      ]
    }
  },
  "required": [
    "status",
    "requestId",
    "type",
    "timestamp"
  ]
}